<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- @layout/view_drawer_list_selector added to be able to change color of menu focus.
    See also layout > view_drawer_list_selecter.xml -->
    <style name="Theme.Light" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>


        <!-- customize the color palette. The colors are defined in values>colors.xml-->
        <item name="colorPrimary">@color/light_theme_color_primary</item>
        <item name="colorPrimaryDark">@color/light_theme_color_primary_dark</item>
        <item name="colorAccent">@color/light_theme_color_accent</item>
        <item name="android:activatedBackgroundIndicator">@drawable/bg_drawer_item</item>

    </style>

    <style name="Theme.Dark" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>

        <!-- customize the color palette -->
        <item name="colorPrimary">@color/dark_theme_color_primary</item>
        <item name="colorPrimaryDark">@color/dark_theme_color_primary_dark</item>
        <item name="colorAccent">@color/dark_theme_color_accent</item>
        <item name="android:activatedBackgroundIndicator">@drawable/bg_drawer_item</item>
        <item name="android:selectableItemBackground">@color/dark_theme_color_primary_dark</item>
    </style>
    <style name="Theme.Light.NoActionBar">
        <!--  <item name="windowActionBar">false</item>   -->
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Dark.NoActionBar">
       <!--  <item name="windowActionBar">false</item>   -->
        <item name="windowNoTitle">true</item>
    </style>
</resources>