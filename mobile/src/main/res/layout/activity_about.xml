<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/entry_fragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:gravity="center"
              android:orientation="vertical">

    <include layout="@layout/view_toolbar"/>

    <ImageView
        android:id="@+id/about_icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="20dip"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/about_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"/>

    <TextView
        android:id="@+id/about_copyright"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:autoLink="web"
        android:lineSpacingMultiplier="1.3"/>

    <TextView
        android:id="@+id/update_feedback"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:autoLink="web"
        android:lineSpacingMultiplier="1.3"
        android:visibility="gone"
        />


    <Button
        style="@style/StandaardButton"
        android:id="@+id/check_for_update"
        android:text="Controleer op nieuwere versie"
        android:onClick="checkForUpdate"
        />

    <Button
        style="@style/StandaardButton"
        android:id="@+id/do_update"
        android:text="update Privacy Vandaag"
        android:onClick="updateApp"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/about_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dip"
        android:autoLink="web"
        android:lineSpacingMultiplier="1.3"/>

</LinearLayout>

